                    @if (product.CategoryId == @count_category && @count_category == 1)
                    {
                        <div class="col-lg-3">
                            <div class="categories__item set-bg" data-setbg="@product.ImageUrl">
                                <h5><a href="#">Mỹ phẩm high-end</a></h5>
                            </div>
                        </div>
                        count_category++;
                        continue;
                    }
                    @if (product.CategoryId == @count_category && @count_category == 2)
                    {
                        <div class="col-lg-3">
                            <div class="categories__item set-bg" data-setbg="@product.ImageUrl">
                                <h5><a href="#">Chăm sóc da mặt</a></h5>
                            </div>
                        </div>
